{
	"name": "donatorsky/vendor-compress",
	"description": "Compress vendor directory into one vendor.phar file",
	"keywords": [
		"vendor-compress",
		"vendor compress",
		"compress"
	],
	"license": "MIT",
	"authors": [
		{
			"name": "Maciej Kudas",
			"email": "maciejkudas@gmail.com"
		}
	],
	"require": {
		"php": ">=7.1",
		"ext-json": "*"
	},
	"require-dev": {
		"friendsofphp/php-cs-fixer": "^2.13.1",
		"phpstan/phpstan": "^0.10.7",
		"roave/security-advisories": "dev-master",
		"symfony/finder": "^4.2"
	},
	"autoload": {
		"psr-4": {
			"Donatorsky\\VendorCompress\\": [
				"src/"
			]
		}
	},
	"scripts": {
		"analyse": [
			"phpstan analyse --level max --memory-limit=64M bin src"
		],
		"fix": [
			"php-cs-fixer fix --show-progress=dots --verbose"
		],
		"fix-all": [
			"@fix",
			"@analyse"
		]
	},
	"bin": [
		"bin/vendor-compress"
	],
	"config": {
		"preferred-install": "dist",
		"sort-packages": true,
		"optimize-autoloader": true
	},
	"minimum-stability": "dev",
	"prefer-stable": true
}
